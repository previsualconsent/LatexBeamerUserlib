% definisce il colore della barralaterale e della structure
\definecolor{darkmain}{rgb}{0.133, 0.133, 0.75}
% definisce il frame del titolo e la barra sotto
\definecolor{midmain}{rgb}{0.5, 0.8, 1}
% definisce il background e le cose chiare
\definecolor{lightmain}{rgb}{0.76, 0.937, 1}

% modifica il colore del titolo e ora anche il testo
\definecolor{titlecolor}{rgb}{0.17, 0.31, 0.44}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

