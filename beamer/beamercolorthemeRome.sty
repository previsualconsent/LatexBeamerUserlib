%% Ho ridefinito i colori in rgb

\mode<presentation>

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% USER DEFINED
%%%%%%%%%%%%%%%%%%%%%%

% definisce il colore della barralaterale e della structure
\definecolor{darkmain}{rgb}{0.82, 0.12, 0.1}
% definisce il frame del titolo e la barra sotto
%\definecolor{midmain}{rgb}{0.5, 0.8, 1}
%\definecolor{midmain}{named}{gray}
\definecolor{midmain}{rgb}{1,0.14,0}
% definisce il background e le cose chiare
\definecolor{lightmain}{rgb}{1, 0.9, 0}

% modifica il colore del titolo e ora anche il testo
\definecolor{titlecolor}{rgb}{1, 1, 0.}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

\usecolortheme[named=darkmain]{structure}

\setbeamercolor{normal text}{bg=lightmain!35, fg=darkmain}%fg=titlecolor}

\setbeamercolor{section in toc}{fg=black,bg=white}
\setbeamercolor{alerted text}{fg=darkmain!80!gray, bg=lightmain!35}
\setbeamercolor*{palette primary}{fg=darkmain!60!black,bg=midmain!50!white}
\setbeamercolor*{palette secondary}{fg=darkmain!70!black,bg=midmain}%!70!white}%!15!white}
\setbeamercolor*{palette tertiary}{bg=darkmain!80!black,fg=midmain!10!white}
\setbeamercolor*{palette quaternary}{fg=darkmain,bg=gray!5!white}

% modificato solo per shervin per fare la barra laterale un po' piu' scura
\setbeamercolor*{sidebar}{fg=gray!15!white,bg=darkmain!75!black,parent=midmain}
%\setbeamercolor*{sidebar}{fg=gray!15!white,bg=darkmain,parent=midmain}

\setbeamercolor*{palette sidebar primary}{fg=lightmain}
\setbeamercolor*{palette sidebar secondary}{fg=lightmain}
\setbeamercolor*{palette sidebar tertiary}{fg=lightmain}
\setbeamercolor*{palette sidebar quaternary}{fg=white}

%\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor{titlelike}{parent=pallette primary,fg=titlecolor}%darkmain}
\setbeamercolor{frametitle}{bg=midmain,fg=darkmain}%!35!white,fg=darkmain}%darkmain!25!orange!}
\setbeamercolor{frametitle right}{bg=framemain!20!white}%gray!60!white}
%\setbeamercolor{frametitle left}{bg=gray!60!white}

\setbeamercolor*{separation line}{black}
\setbeamercolor*{fine separation line}{}


%% Colori delle scatole
\setbeamercolor{block title}{use=structure,fg=white,bg=structure.fg!75!black}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=alerted text.fg!75!black}
%\setbeamercolor{block title example}{use=example text,fg=white,bg=example text.fg!75!black}

%\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!10!bg}
\setbeamercolor{block body}{parent=normal text,use=block title,bg=midmain!50!white}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!10!bg}
%\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!10!bg}



