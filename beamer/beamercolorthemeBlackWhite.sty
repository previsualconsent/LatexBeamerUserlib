\RequirePackage{umoline}

\mode<presentation>
\definecolor{titlecolor}{rgb}{0., 0., 0.}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
%% USER DEFINED
%%%%%%%%%%%%%%%%%%%%%%

% definisce il colore della barralaterale e della structure
\definecolor{darkmain}{rgb}{0.,0.,0.}
% definisce il frame del titolo e la barra sotto
\definecolor{midmain}{rgb}{0.8, 0.8, 0.8}
% definisce il background e le cose chiare
\definecolor{lightmain}{rgb}{1., 1., 1.}

% modifica il colore del titolo e ora anche il testo
%\definecolor{titlecolor}{rgb}{0., 0., 0.}

%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%

%\usecolortheme[named=lightmain]{structure}

\setbeamercolor{normal text}{bg=lightmain, fg=darkmain}
\setbeamercolor{inverted text}{bg=darkmain, fg=lightmain}

\setbeamercolor{section in toc}{fg=darkmain,bg=darkmain}
\setbeamercolor{alerted text}{fg=darkmain, bg=darkmain}
\setbeamercolor*{palette primary}{fg=lightmain,bg=darkmain}
\setbeamercolor*{palette secondary}{fg=lightmain,bg=darkmain}
\setbeamercolor*{palette tertiary}{fg=darkmain,bg=midmain}
\setbeamercolor*{palette quaternary}{fg=lightmain,bg=darkmain}

% modificato solo per shervin per fare la barra laterale un po' piu' scura
\setbeamercolor*{sidebar}{fg=gray!15!darkmain,bg=lightmain!75!darkmain,parent=midmain}
%\setbeamercolor*{sidebar}{fg=gray!15!lightmain,bg=lightmain,parent=midmain}

\setbeamercolor*{palette sidebar primary}{fg=darkmain}
\setbeamercolor*{palette sidebar secondary}{fg=darkmain}
\setbeamercolor*{palette sidebar tertiary}{fg=darkmain}
\setbeamercolor*{palette sidebar quaternary}{fg=darkmain}

%\setbeamercolor*{titlelike}{parent=palette primary}
\setbeamercolor{titlelike}{parent=pallette primary,fg=darkmain}%lightmain}
\setbeamercolor{frametitle}{bg=darkmain,fg=lightmain}%!35!lightmain,fg=lightmain}%lightmain!25!orange!}
\setbeamercolor{frametitle right}{bg=framemain!20!lightmain}%gray!60!lightmain}
%\setbeamercolor{frametitle left}{bg=gray!60!lightmain}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

%\usepackage{umoline}
\renewcommand{\alert}[1]{\textbf{\Underline{#1}}}

%% Colori delle scatole
\setbeamercolor{block title}{parent=inverted text}
\setbeamercolor{block title alerted}{use=alerted text,fg=lightmain,bg=alerted text.fg!75!darkmain}
%\setbeamercolor{block title example}{use=example text,fg=lightmain,bg=example text.fg!75!darkmain}

%\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!10!bg}
%\setbeamercolor{block body}{parent=normal text,use=block title,bg=midmain}
\setbeamercolor{block body}{use=normal text}
%\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!10!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=blue!20!bg}
%%\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!10!bg}
\setbeamertemplate{block end}{
  \color{normal text}
  \color{titlecolor}
}

% Colori degli itemize
\setbeamercolor{itemize item}{fg=darkmain}
\setbeamercolor{itemize subitem}{fg=darkmain}
\setbeamercolor{itemize subsubitem}{fg=darkmain}

\setbeamercolor{description item}{fg=darkmain}

