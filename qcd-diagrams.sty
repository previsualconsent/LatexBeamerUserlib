\newcommand{\sgammajet}{
  \begin{fmfgraph*}(110,80)
    \fmfleft{i1,i2} 
    \fmfright{o1,o2} 
    \fmf{fermion}{i1,v1} 
    \fmflabel{\ensuremath{q}}{i1}
    \fmf{gluon}{v1,i2}	
    \fmflabel{\ensuremath{g}}{i2}
    \fmf{fermion}{v2,o1} 
    \fmflabel{\ensuremath{q}}{o1} 
    \fmf{photon}{v2,o2} 
    \fmflabel{\ensuremath{\gamma}}{o2} 
    \fmf{fermion,label=\ensuremath{q}}{v1,v2}
